<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - TypographicBloggerWeb</title>

    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/css/typographicblogger.min.css" />
    <link rel="stylesheet" href="~/TypographicBloggerWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="position-fixed">
        <nav class="navbar d-flex ps-5">
            <a class="navbar-brand d-flex align-items-center" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="bi bi-bounding-box text-primary-gradient display-5"></i>
                &nbsp;
                <span class="toggle-nav-item__visibility ms-3">Typographic Blog</span>
            </a>
        </nav>
    </header>

    <div id="main-content__identity" class="container-fluid vh-100">
        <main role="main">
            @RenderBody()
        </main>
    </div>

<script defer src="~/lib/barba.js/barba.min.js"></script>
<script src="~/lib/gsap/gsap.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
<script src="~/js/transitions.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>