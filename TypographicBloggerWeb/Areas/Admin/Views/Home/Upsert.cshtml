@model TypographicBlogger.Models.Post

<form class="row bg-white box-shadow" method="post" asp-action="Upsert">
    <div class="col-12 my-3">
        <h1 class="text-primary">Create a new post</h1>
    </div>

    <div class="col-6 my-3">
        <label asp-for="@Model.Title"></label>
        <input class="form-control" asp-for="@Model.Title" placeholder="@Model.Title" />
        <span asp-validation-for="@Model.Title"></span>
    </div>

    <div class="col-6 my-3">
        <label asp-for="@Model.Slug"></label>
        <input class="form-control" asp-for="@Model.Slug" />
        <span asp-validation-for="@Model.Slug"></span>
    </div>

    <div class="col-12 my-3">
        <textarea id="blogContentArea" asp-for="@Model.Content"></textarea>
        <span asp-validation-for="@Model.Content"></span>
    </div>
    
    <input type="hidden" asp-for="Id"/>

    <div class="col-3 my-3">
        <button class="btn btn-primary w-100">Save Data</button>
    </div>
</form>

<hr/>

@section Scripts
{
    <script src="https://cdn.tiny.cloud/1/eiokn8243tp4rwj1xxvrb8q0oo10ks7fhk6luplifj0qsnpq/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        tinymce.init({
            selector: "#blogContentArea"
        });
    </script>
}
