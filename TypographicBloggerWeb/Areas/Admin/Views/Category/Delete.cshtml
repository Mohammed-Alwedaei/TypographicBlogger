@model TypographicBlogger.Models.Category

<form class="row bg-white box-shadow" method="post" asp-action="Delete">
    <div class="col-12 my-3">
        <h1 class="text-dark">Create a category</h1>
    </div>

    <div class="col-6 my-3">
        <label asp-for="@Model.Name"></label>
        <input class="form-control" asp-for="@Model.Name" disabled />
        <span asp-validation-for="@Model.Name"></span>
    </div>
    
    <div class="col-6 my-3">
        <label asp-for="@Model.DisplayOrder"></label>
        <input class="form-control" asp-for="@Model.DisplayOrder" disabled />
        <span asp-validation-for="@Model.DisplayOrder"></span>
    </div>
    
    <input type="hidden" asp-for="Id" />

    <div class="col-3 my-3">
        <button class="btn btn-primary w-100">Delete Category</button>
    </div>
</form>